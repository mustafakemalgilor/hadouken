{
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.formatting": "Disabled",
    "cmakeExplorer.buildDir": "build",
    "breadcrumbs.enabled": true,
    "files.exclude": {
	    ".hadouken": true,
	    ".devcontainer": true,
        ".vscode": true,
        "hadouken": true,
    },
    "cmake.configureArgs": ["-Wno-dev"],
    "cmake.configureOnOpen": true,
    "cmake.generator": "Unix Makefiles",
    "cmake.debugConfig": {},
    "cmake.configureSettings" : {},
    "doxdocgen.file.customTag": ["______________________________________________________"],
    "doxdocgen.file.fileTemplate": "@file         {name}",
    "doxdocgen.file.copyrightTag":
    [
        // (mgilor): Re-enabled until fixed properly
        "@copyright   2020 NETTSI Informatics Technology Inc.",
        "",
        "Unauthorized copying of this file, via any medium is strictly prohibited",
        "Proprietary and confidential"
    ],
    "doxdocgen.generic.authorTag": "@author       {author} <{email}>",
    "doxdocgen.file.fileOrder": [
        "custom",
        "empty",
        "empty",
        "file",
        "author",
        "date",
        "empty",
        "copyright",
        "custom"
    ],
    "doxdocgen.generic.dateFormat": "DD.MM.YYYY",
    "doxdocgen.generic.dateTemplate": "@date         {date}",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools"
}
